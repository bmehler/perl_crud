 <TMPL_VAR NAME=TEST>
 <div class="form-group">
  <input type="hidden" name="id" id="id" value="<TMPL_VAR NAME=ID>">
</div>
 <div class="form-group">
  <label for="vorname">Vorname</label>
  <input type="text" class="form-control form-control-lg" name="vorname" id="vorname" placeholder="Vorname" value="<TMPL_VAR NAME=VORNAME>" pattern="^[A-Z][a-z]{2,}" required="required">
</div>
<div class="form-group">
  <label for="nachname">Nachname</label>
  <input type="text" class="form-control form-control-lg" name="nachname" id="nachname" placeholder="Nachname" value="<TMPL_VAR NAME=NAME>" pattern="[A-Za-z]{3,}" required="required">
</div>
<div class="form-group">
  <label for="position">Position</label>
  <select class="form-control form-control-lg" name="position" id="position" required="required">
    <option value="1" <TMPL_IF NAME="PROJEKTMANAGER"> selected</TMPL_IF>>Projektmanager</option>
    <option value="2" <TMPL_IF NAME="SALESMANAGER"> selected</TMPL_IF>>Salesmanager</option>
    <option value="3" <TMPL_IF NAME="FRONTEND"> selected</TMPL_IF>>Frontend-Developer</option>
    <option value="4" <TMPL_IF NAME="BACKEND"> selected</TMPL_IF>>Backend-Developer</option>
    <option value="5" <TMPL_IF NAME="GRAFIK"> selected</TMPL_IF>>Grafiker</option>
  </select>
</div>
<div class="form-group">
  <label for="gehalt">Gehalt</label>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">â‚¬</span>
    </div>
  <input type="text" class="form-control form-control-lg" name="gehalt" id="gehalt" placeholder="Gehalt" value="<TMPL_VAR NAME=GEHALT>" pattern="^[0-9]+\.[0-9]{2}$" required="required">
  </div>
</div>